{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion":2017,
    "sourceType":"module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules":{
    "semi":0,
    "quotes":["error","single"],
    "react/jsx-uses-vars": 1,
    "react/jsx-uses-react": 1,
    "react/prop-types" : [1, {"ignore":["children"]}],
    "no-extra-boolean-cast":0
  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "es6": true
  },
  "globals": { "browser": true }
}
